<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_ll_btn"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@drawable/round_border_bordered"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calendar_tv_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:fontFamily="@font/black"
        android:text="D+3"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/calendar_tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="하루에 \n물 3잔씩 마시기"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/calendar_framelayout1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_border_orange">

            <ImageView
                android:id="@+id/calendar_framelayout1_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/calendar_stamp"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/calendar_framelayout2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_border_orange">

            <ImageView
                android:id="@+id/calendar_framelayout2_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/calendar_stamp"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/calendar_framelayout3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_border_orange">

            <ImageView
                android:id="@+id/calendar_framelayout3_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/calendar_stamp"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>